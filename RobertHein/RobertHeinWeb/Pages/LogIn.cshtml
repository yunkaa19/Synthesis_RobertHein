@page
@model RobertHeinWeb.Pages.LogIn

@{
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Login</h3>
                        <p style="color: red">@Model.ErrorMessage</p>


                        <form method="post" asp-page-handler="Login">

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="Email">Email</label>
                                        <input type="text" id="Email" name="email" class="form-control form-control-lg" required/>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="password">Password</label>
                                        <input type="password" id="password" name="password" class="form-control form-control-lg" required/>
                                    </div>

                                </div>
                            </div>


                            <div class="mt-4 pt-2">
                                <input asp-page-handler="Login" class="btn btn-primary btn-lg" type="submit" value="Login"/>
                            </div>

                        </form>
                        <br>
                        <p>Don`t have an account? <a asp-area="" asp-page="/Register">Register!</a></p>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>