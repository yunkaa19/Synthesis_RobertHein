@page
@model RobertHeinWeb.Pages.RegisterPage

@{
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Register</h3>
                        <p style="color: red">@Model.ErrorMessage</p>
                        <div asp-validation-summary="All" style="color: red"></div>

                        <form method="post" asp-page-handler="Register">

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label" for="Email">Email:</label>
                                        <input asp-for="customerRegister.email" type="text" id="Email" class="form-control form-control-lg" required/>
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label" for="FirstName">First Name:</label>
                                        <input asp-for="customerRegister.firstName" type="text" id="FirstName" class="form-control form-control-lg" required/>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label" for="LastName">Last Name:</label>
                                        <input asp-for="customerRegister.lastName" type="text" id="LastName" class="form-control form-control-lg" required/>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="Password">Password:</label>
                                        <input asp-for="customerRegister.password" type="password" id="Password" class="form-control form-control-lg" required/>
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        <label for="birthdayDate" class="form-label">Birthday</label>
                                        <input asp-for="customerRegister.birthdayDate" type="date" class="form-control form-control-lg" id="birthdayDate" required/>
                                    </div>

                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="City">City</label>
                                        <input asp-for="customerRegister.city" type="text" id="City" class="form-control form-control-lg" required/>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="Postal">Postal Code:</label>
                                        <input asp-for="customerRegister.postalCode" type="text" id="Postal" class="form-control form-control-lg" required/>
                                    </div>

                                </div>
                                
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label" for="Adress">Address:</label>
                                        <input asp-for="customerRegister.address" type="text" id="Adress" class="form-control form-control-lg" required/>
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" for="phoneNumber">Phone Number</label>
                                        <input asp-for="customerRegister.phoneNumber" type="tel" id="phoneNumber" class="form-control form-control-lg" required/>
                                    </div>

                                </div>
                                
                                
                            </div>
                        


                            <div class="mt-4 pt-2">
                                <input asp-page-handler="Register" class="btn btn-primary btn-lg" type="submit" value="Submit"/>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

