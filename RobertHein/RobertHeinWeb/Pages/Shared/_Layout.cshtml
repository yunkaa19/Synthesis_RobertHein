<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RobertHeinWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/RobertHeinWeb.styles.css" asp-append-version="true" /> *@
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-dark mh-100">
            
            <a class="navbar-brand mh-100 " asp-area="" asp-page="/Index"><img class="mh-100" style="width: 80px; padding-left: 15%" src="Images/RH_Black.png"/></a>
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Products">Products</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" id="navbarDrop" role="button" data-bs-toggle="dropdown" aria-expanded="false" asp-area="" asp-page="">Categories</a>
                            <ul class="dropdown-menu-dark" aria-labaledby="navbarDrop">
                                @* @foreach(var category in Model.Categories) *@
                                @* { *@
                                @*     if (!category.parentID == null) *@
                                @*     { *@
                                @*         //<li><a class="dropdown-item text-light" asp-area="" asp-page="/Products" asp-route-category=category>category.Name</a></li> *@
                                @*     } *@
                                @* } *@
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div style="display:flex;">
                <img class="d-flex align-self-center mh-100" style="width: 80px;" src="Images/Robert Hein Basket .png"/>
                <img class="d-flex align-self-center mh-100" style="width: 80px;" src="Images/Profile.png"/>
            </div>
        </nav>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - RobertHeinWeb - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>